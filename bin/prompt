begin
  puts
  loop do
    choose do |menu|
      menu.prompt = "Please select to log in: "
      menu.choice(:Customer) { customer_login_prompt() }
      menu.choice(:Adminstrator) { admin_login_prompt() }
      menu.choice(:Quit, "Exit program.") { exit }
    end
  end
end
